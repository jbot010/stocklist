<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/brands/new.css"/>
<%- include('../partials/nav') %>

<main>
  <div class="icon-top flex-row">
    <img class="main-icons" src="/images/t-shirt-64.png" alt="t-shirt icon">
    <img class="main-icons" src="/images/jeans-64.png" alt="jeans icon">
    <img class="main-icons" src="/images/shirt-64.png" alt="shirt icon">
    <img class="main-icons" src="/images/sneaker-64.png" alt="sneaker icon">
    <img class="main-icons" src="/images/backpack-64.png" alt="backpack icon">
  </div>
  <h1><%= title %></h1>
  <p>Please first ensure that the Color is not in the list
    <ul class="flex-column">
      <% colors.forEach(function(color) { %>
        <div class="flex-row add-on-list">
          <%= color.name %>
          <form 
            action="/colors/<%= color._id %>?_method=DELETE"
            class="delete-form"
            method="POST"
          >
          <button class="delete-btns" type="submit">❌</button>
          </form>
        </div>
      <% }) %>
    </ul>
  </p>
  <form 
    id="new-color-form" 
    action="/colors" 
    method="POST"
  >
    <input type="text" name="name" id="name-input">
    <button  class="add-btns" type="submit">➕</button>
  </form>
</main>

<%- include('../partials/footer') %>