<%- include('../partials/html-head') %>

<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Name: </div>
    <div><%= clothingItem.name %>
      <span><%= 
        clothingItem.name === 'Tops' && '👕' 
        || clothingItem.name === 'Bottoms' && '👖' 
        || clothingItem.name === 'Outerwear' && '🧥' 
        || clothingItem.name === 'Shoes' && '👟' 
        || clothingItem.name === 'Accessories' && '🧢' 
        || ''%></span>
    </div>
    <div>Description: </div>
    <div><%= clothingItem.description %></div>
    <div>Favorite: </div>
    <div><%= clothingItem.favorite ? 'Yes ✅' : 'Nope 🚫' %></div>
    <div>Status: </div>
    <div><%= clothingItem.status === 'Keep' && 'Keep ❤️' ||  clothingItem.status === 'Sell' && 'Sell 💲' || clothingItem.status === 'Donate' && 'Donate ♻️' || '' %></div>
    <div>Sold:</div>
    <div><%= clothingItem.sold ? 'Yes 💸' : 'Nope 🚫'%></div>
    <div>Brand:</div>
    <% clothingItem.brands.forEach(brandType => { %>
      <%= brandType.name %>
    <% }) %>
    <form
      id="add-brand-to-item"
      action="/clothingitems/<%= clothingItem._id %>/brands"
      method="POST"
    >
      <select name="brandId" id="brand-select">
        <% brands.forEach(brand => { %>
          <option value="<%= brand._id %>"><%= brand.name %></option>
      <% }) %>
      </select>
      <button type="submit">Add Brand</button>
    </form>
    <a href="/clothingitems/<%= clothingItem._id %>/edit">
      <button>Edit Item</button>
    </a>

  </section>
</main>

<%- include('../partials/footer') %>
